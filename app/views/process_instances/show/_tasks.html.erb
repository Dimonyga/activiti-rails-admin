<% if @jobs %>
    <div class="panel panel-default">
      <div class="panel-heading cursor-pointer collapsed" data-toggle="collapse"
           data-target="#collapse_tasks" data-parent="#accordion">
        <span class="notification-header collapsed"><strong>Process Tasks</strong>
          <%= elements_count(@tasks) %></span>
      </div>
      <div id="collapse_tasks" class="accordion-body collapse">
        <div class="panel-body accordion-inner">
          <% if @tasks.any? %>
              <table class="table table-striped table-bordered">
                <thead>
                <th>Id</th>
                <th>Created</th>
                <th>Name</th>
                <th>Task Definition Key</th>
                </thead>
                <tbody>
                <% @tasks.each do |task| %>
                    <tr>
                      <td><%= task.id %></td>
                      <td><%= Time.parse(task.createTime).strftime '%Y-%m-%d %H:%M'  %></td>
                      <td><%= task.name.to_s %></td>
                      <td><%= task.taskDefinitionKey.to_s %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
          <% else %>
              <%= no_elements 'Tasks' %>
          <% end %>
        </div>
      </div>
    </div>
<% end %>