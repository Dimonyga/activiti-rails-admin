<div class="panel panel-default">
  <div class="panel-heading cursor-pointer collapsed" data-toggle="collapse"
       data-target="#collapse_variables" data-parent="#accordion">
    <span class="notification-header collapsed"><strong>Process Variables</strong>
      <%= elements_count(@variables) %></span>
  </div>
  <div id="collapse_variables" class="accordion-body collapse">
    <div class="panel-body accordion-inner">
      <% if @variables.any? %>
          <table class="table table-striped table-bordered">
            <thead>
            <th>Name</th>
            <th>Type</th>
            <th>Value</th>
            <th>Actions</th>
            </thead>
            <tbody class="variables_searchable">
            <tr><td colspan="4">
              <div class="input-group" style="width: 100%"><span class="input-group-addon">Filter</span>
                <input id="variables_filter" type="text" class="form-control" placeholder="Enter search text...">
              </div>
            </td></tr>
            <% @variables.each do |variable| %>
                <tr class="searchable_data">
                  <td><%= variable.name %></td>
                  <td><%= variable.type %></td>
                  <td><%= variable_tag @process_instance, variable %></td>
                  <td><%= process_variable_delete_tag(@process_instance.id, variable.name) unless @process_instance.endTime %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
      <% else %>
          <%= no_elements 'Variables' %>
      <% end %>
    </div>
  </div>
</div>